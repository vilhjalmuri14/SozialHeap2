@model Sozialheap.Models.ViewModels.PostView
@{
    ViewBag.Title = "ViewQuestion";
}

<!-- Question starts -->

<div class="col-sm-12">
    <div class="panel panel-primary" id="question">

        <div class="panel-heading question">
            <h3 id="panel-title" class="panel-title">

                @Model.currentPost.name

            </h3>
        </div>
        <div class="panel-body">

            <div class="textholder post">
                <div class="imgholder">
                    <img src="~/images/anonymous_user.png" />
                </div>
                <div class="authorinfo">
                    <h4>
                        @Model.currentPost.User.userName

                        <!-- author score starts -->
                        <span class="notimportant">asked:</span>
                    </h4>
                    <div class="authorscore">
                        <span class="badge">
                            <span class="glyphicon glyphicon-console">
                            </span> @Model.currentPost.User.score
                        </span>
                    </div>
                    <!-- author score ends -->

                </div>
                <div class="postinfo">
                    <span class="notimportant">posted</span> @ViewBag.timeSince

                </div>
                <div class="end">
                    @Model.currentPost.body
                    <div class="postfooter">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="leftbutton">
                                <a href="#createAnswer" class="btn btn-default" data-toggle="modal">Reply</a>
                            </div>
                        }

                        <div class="coolpost rightbutton">

                            @if (User.Identity.IsAuthenticated)
                            {
                                if (Model.LikedPost)
                                {
                                    <a href="@Url.Action("UnLikePost/" + Model.currentPost.postID)">
                                        <span class="glyphicon glyphicon-thumbs-up badge"> Unlike @Model.currentPost.scoreCounter </span>
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("LikePost/" + Model.currentPost.postID)">
                                        <span class="glyphicon glyphicon-thumbs-up badge"> Like @Model.currentPost.scoreCounter </span>
                                    </a>
                                }
                            }
                            else
                            {
                                <span class="glyphicon glyphicon-thumbs-up badge"> @Model.currentPost.Users.Count Likes </span>
                            }

                        </div>
                    </div>
                    <div class="endfooter">&nbsp;</div>
                </div>

            </div>
            <!-- Responses start-->
            <h4 class="responses">Responses</h4>


            @for (int i = 0; i < Model.answerList.Count; i++)
            {

                <!-- Answer test starts -->
                <div class="col-sm-12">
                    <div class="panel panel-primary answer">

                        <div class="panel-heading">
                            <h3 id="panel-title" class="panel-title">

                                @Model.answerList[i].title

                            </h3>
                        </div>
                        <div class="panel-body">

                            <div class="textholder post">
                                <div class="imgholder">
                                    <img src="~/images/anonymous_user.png" />
                                </div>
                                <div class="authorinfo">
                                    <h4>
                                        @Model.answerList[i].User.userName
                                        <!-- author score starts -->
                                        <span class="notimportant">answered:</span>
                                    </h4>
                                    <div class="authorscore">
                                        <span class="badge">
                                            <span class="glyphicon glyphicon-console">
                                            </span> @Model.answerList[i].User.score
                                        </span>
                                    </div>
                                    <!-- author score ends -->

                                </div>
                                <div class="postinfo">

                                </div>
                                <div class="end" style="white-space: pre-wrap;">@Model.answerList[i].body
                            </div>

                        </div>
                        <div class="questionbox">
                            <div class="info"> <span class="notimportant">posted</span> @ViewBag.ansTime[i]</div>


                            <div class="cool"><span class="glyphicon glyphicon-thumbs-up badge">  @Model.answerList[i].scoreCounter </span></div>
                        </div>
                    </div>
                </div>
            </div>
            }
            <a name="bottom"></a>
        </div>
    </div>
</div>
<!-- Question test ends -->
<!-- Answer button -->
@Html.Partial("_CreateAnswer")
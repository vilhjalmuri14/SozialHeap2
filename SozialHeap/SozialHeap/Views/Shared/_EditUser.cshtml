<div class="modal fade" id="editUser" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit user</h4>
            </div><!--/.modal-header-->
            <div class="modal-body">
                <form role="form" action="~/User/EditUser" method="POST" class="form-horizontal" id="groupForm">
                    <input type="hidden" name="userID" value="@ViewBag.userID" />
                    
                    <div class="form-group">
                        <label for="fullName" class="col-sm-3 control-label">Full name</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="fullName" type="text" value="@ViewBag.fullName">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description" class="col-sm-3 control-label">Description</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" rows="4" name="description">@ViewBag.description</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description" class="col-sm-3 control-label">Photo</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="photo" value="@ViewBag.photo" />
                        </div>
                    </div>

                </form>
                <div class="clearfix"></div>
            </div><!-- /modal-body -->
            <div class="clearfix"></div>
            <div class="modal-footer">
                <a class="btn btn-primary" data-dismiss="modal" href="javascript:void()" onclick="document.getElementById('groupForm').submit();">Save changes</a>
                <a class="btn btn-default" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div><!--/.modal content-->
</div><!--/.modal-dialog-->


<div class="modal fade" id="createAnswer" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Post an answer</h4>
            </div><!--/.modal-header-->
            <div class="modal-body">
                <form role="form" action="~/Question/CreateAnswer" method="POST" class="form-horizontal" id="answer">
                    <input type="hidden" name="postID" value="@ViewBag.postID" />
                    <div class="form-group">
                        <label for="title" class="col-sm-3 control-label">Title</label>
                        <div class="col-sm-9">
                            <input class="form-control" name="title" id="AnswerTitle" type="text" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="body" class="col-sm-3 control-label">Body</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" rows="4" name="body" id="AnswerBody"></textarea>
                        </div>
                    </div>
                    <p id="alertMessage" style="color:red"></p>
                </form>
                <div class="clearfix"></div>
            </div><!-- /modal-body -->
            <div class="clearfix"></div>
            <div class="modal-footer">
                <a class="btn btn-primary" href="javascript:void()" onclick="CheckCreateAnswer();">Post answer</a>
                <a class="btn btn-default" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div><!--/.modal content-->
</div><!--/.modal-dialog-->

<script>
    // javascript to check if the boxes or empty.
    function CheckCreateAnswer() {
        var AnswerTitle = $("#AnswerTitle").val();
        var AnswerBody = $("#AnswerBody").val();

        //document.getElementById('answer').submit();
        if (AnswerBody == "" || AnswerTitle == "") {
            $("#alertMessage").html("Please fill in all the boxes.");
        }
        else {
            $('#alertMessage').html("");
            $('#answer').submit();
            $('#createAnswer').modal('toggle');
        }
    };
</script>
@model SozialHeap.Models.ViewModels.FrontPageView

@{
    ViewBag.Title = "Welcome";
}
<!-- Content starts -->
<div class="row">
    <!-- Top Question starts -->
    <div class="col-sm-6">
        <div class="panel panel-primary question">

            <div class="panel-heading">
                <h3 id="panel-title" class="panel-title">

                    Top Questions

                </h3>
            </div>
            <div class="panel-body">
                @foreach (var item in Model.Posts)
                {
                    <div class="topitem postquestion" id="topquestion1">
                        <div class="imgholder">
                            <img src="~/images/question.png" />
                        </div>
                        <div class="textholder">
                            <h4>@Html.ActionLink(item.name, "ViewQuestion/" + item.postID, "Question")</h4> <span class="notimportant">posted in </span>@Html.ActionLink(item.Group.groupName, "ViewGroup/" + item.groupID, "Group")<br />
                            @item.body
                        </div>
                    </div>
                }
                <!-- end example -->

            </div>
        </div>
    </div>
    <!-- Top Question ends -->
    <!-- Newest Questions starts -->
    <div class="col-sm-6">
        <div class="panel panel-primary question">

            <div class="panel-heading">
                <h3 id="panel-title" class="panel-title">

                    Newest Questions

                </h3>
            </div>
            @foreach(var item in Model.Groups)
            { 
            <div class="panel-body">
                <div class="topitem postquestion" id="topquestion1">
                    <div class="imgholder">
                        <img src="~/images/Group.png" />
                    </div>
                    <div class="textholder">
                        <h4>@Html.ActionLink(item.groupName, "ViewGroup/" + item.groupID, "Group")</h4><br />
                        @item.description
                    </div>
                </div>
           
            </div>
            }
        </div>
    </div>

    <div class="col-sm-6">
        <div class="panel panel-primary question">

            <div class="panel-heading">
                <h3 id="panel-title" class="panel-title">

                    Top Users

                </h3>
            </div>
            @foreach (var item in Model.Users.Take(5))
            {
                <div class="panel-body">
                    <div class="topitem postquestion" id="topquestion1">
                        <div class="imgholder">
                            <img src="~/images/Group.png" />
                        </div>
                        <div class="textholder">
                            <h4>@Html.ActionLink(item.userName, "ViewUser/"+item.userName, "User")</h4> <br />
                            @item.description
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>

    <!-- Suggested groups  ends -->
</div>
<!-- Content ends -->